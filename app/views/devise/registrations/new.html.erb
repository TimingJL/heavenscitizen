<div class="card" style='margin: 0 auto;padding:30px;max-width:500px;margin-top:25px;'>
  <div class="card-body">
    <h3 class="card-title" style='font-weight:bold;text-align:center'>
        註冊
    </h3>
    <p class="card-text">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div>
              姓名<br />
              <%= f.text_field :name, autofocus: true, required: true, class:"form-control" %>
          </div><br />

          <div>性別<br /><%= f.select :is_female, {"男性" => false, "女性" => true} %></div><br />

          <div>
              生日<br />
              <%= f.date_field :date_of_birth, required: true, class:"form-control" %>
          </div><br />

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, required: true, class:"form-control" %>
          </div><br />

          <div class="field">
            密碼
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div><br />

          <div class="field">
            確認密碼<br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div><br />

          <div class="actions">
            <%= f.submit "註冊", class:'btn btn-success btn-block btn-lg' %>
          </div><br />
        <% end %>

        <%= render "devise/shared/links" %>
    </p>
  </div>
</div>
