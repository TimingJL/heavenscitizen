            <% if current_user.admin? %>
                <div class="btn-group">
                  <%= link_to current_user.name, edit_user_registration_path, class: 'btn btn-outline-info my-2 my-sm-0' %>
                  <button type="button" class="btn btn-outline-info dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" style='right:0;'>
                    <%= link_to '管理後台', rails_admin_path, class: 'dropdown-item btn btn-outline-primary my-2 my-sm-0' %>
                    <%= link_to '聚會時間分類', service_time_categories_path, class: 'dropdown-item btn btn-outline-primary my-2 my-sm-0' %>
