<p id="notice"><%= notice %></p>

<h1>Word Content Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_content_categories.each do |word_content_category| %>
      <tr>
        <td><%= word_content_category.name %></td>
        <td><%= word_content_category.order %></td>
        <td><%= link_to 'Show', word_content_category %></td>
        <td><%= link_to 'Edit', edit_word_content_category_path(word_content_category) %></td>
        <td><%= link_to 'Destroy', word_content_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

