<p id="notice"><%= notice %></p>
<% if user_signed_in? and current_user.admin? %>
    <div style='margin:20px auto;text-align: center;'>
      <%= link_to '新增影片', new_link_path, class: "btn btn-info btn-lg", style: 'color:white;' %>
    </div>
<% end %>
<%= @teamp %>
<% if current_user.certification? %>
  <div class="row">
    <% @links.each do |link| %>
      <div class="col-md-4">
        <div class="card" style="width: 100%;max-width: 350px; margin:10px auto;border-style: none;">
          <%= link_to(image_tag(link.image, height:"235px;", width:"100%"), link) %>
          <div class="card-block" style='padding:20px;'>
            <h5 class="card-title" style='font-weight:bold;'><%= link.titile %></h5>
            <p class="card-text"><%= link.description %><br><%= link.announce_date %></p>
            <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
                  <% link.service_time_categories.each do |category| %>
                    <form style='display:inline-block;'>
                      <%= text_field_tag :tag, params[:tag], value: category.name,style: "display:none;" %>
                      <input class='btn btn-outline-secondary btn-sm' type="submit" value='<%= category.name %>'>
                    </form>
                  <% end %>

                  <% link.service_type_categories.each do |category| %>
                    <form style='display:inline-block;'>
                      <%= text_field_tag :tag, params[:tag], value: category.name,style: "display:none;" %>
                      <input class='btn btn-outline-secondary btn-sm' type="submit" value='<%= category.name %>'>
                    </form>
                  <% end %>

                  <% link.word_content_categories.each do |category| %>
                    <form style='display:inline-block;'>
                      <%= text_field_tag :tag, params[:tag], value: category.name,style: "display:none;" %>
                      <input class='btn btn-outline-secondary btn-sm' type="submit" value='<%= category.name %>'>
                    </form>
                  <% end %>
            </li>
          </ul>
          <% if user_signed_in? and current_user.admin? %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <span>
                  <%= link_to '編輯', edit_link_path(link), class: "btn btn-secondary", style: 'color:white;' %>
                  <%= link_to '刪除', link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary", style: 'color:white;' %>
                </apn>
              </li>
              <!-- <li class="list-group-item">Dapibus ac facilisis in</li>
              <li class="list-group-item">Vestibulum at eros</li> -->
            </ul>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render 'certification' %>
<% end %>
