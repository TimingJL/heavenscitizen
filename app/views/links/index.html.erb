<p id="notice"><%= notice %></p>
<% if user_signed_in? and current_user.admin? %>
    <div style='margin:20px auto;text-align: center;'>
      <%= link_to '新增影片', new_link_path, class: "btn btn-success btn-lg", style: 'color:white;' %>
    </div>
<% end %>


<div class="row">
  <% @links.each do |link| %>
    <div class="col-md-4">
      <div class="card" style="width: 350px; height:400px; margin:10px auto;">
        <%= link_to(image_tag(link.image, height:"235px;", width:"348px;"), link) %>
        <div class="card-block" style='padding:20px;'>
          <h5 class="card-title" style='font-weight:bold;'><%= link.titile %></h5>
          <p class="card-text"><%= link.description %></p>
          <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
        </div>
        <div class="card-footer text-muted" style='background-color:white;'>
          <%= link_to '編輯', edit_link_path(link), class: "btn btn-secondary", style: 'color:white;' %>
          <%= link_to '刪除', link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary", style: 'color:white;' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
