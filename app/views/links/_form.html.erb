<%= form_with(model: link, local: true) do |form| %>
  <% if link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    標題
    <%= form.text_field :titile, id: :link_titile, required: true, class:"form-control" %>
  </div><br>

  <!-- <div class="field">
    <%= form.label :favicon %>
    <%= form.text_field :favicon, id: :link_favicon %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :link_image %>
  </div> -->

  <div class="field">
    日期
    <%= form.date_field :announce_date, id: :link_announce_date, required: true, class:"form-control" %>
  </div><br>

  <div class="field">
    Youtube連結(url)
    <%= form.text_field :url, id: :link_url, required: true, class:"form-control" %>
  </div><br><hr>

  <div class="field">
    聚會時間分類<br>
    <%= form.collection_check_boxes :service_time_category_ids, ServiceTimeCategory.all, :id, :name, class:"form-control" %>
  </div><br>

  <div class="field">
    聚會類型分類<br>
    <%= form.collection_check_boxes :service_type_category_ids, ServiceTypeCategory.all, :id, :name, class:"form-control" %>
  </div><br>

  <div class="field">
    話語內容分類<br>
    <%= form.collection_check_boxes :word_content_category_ids, WordContentCategory.all, :id, :name, class:"form-control" %>
  </div><br>

  <div class="field">
    描述/備註
    <%= form.text_area :description, id: :link_description, required: true, class:"form-control" %>
  </div><br>
  
  <div class="actions">
    <%= form.submit :class => 'btn btn-success btn-block btn-lg', :value=>"確認" %>
  </div>
<% end %>
