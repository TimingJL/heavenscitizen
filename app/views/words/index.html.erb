<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Link</th>
      <th>Service time category</th>
      <th>Service type category</th>
      <th>Word content category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.title %></td>
        <td><%= word.content %></td>
        <td><%= word.link_id %></td>
        <td><%= word.service_time_category_id %></td>
        <td><%= word.service_type_category_id %></td>
        <td><%= word.word_content_category_id %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

